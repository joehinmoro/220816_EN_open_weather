<%- include("partials/head")%>

<section class="container border mt-4 w-50 p-3">
    <h2 class="text-center">Weather</h2>
    <form action="/weather" method="post" class="mt-3">
        <div class="form-floating mb-3">
            <input
                type="text"
                class="form-control bg-dark text-light"
                id="floatingInput"
                placeholder="Lagos"
                name="city"
                required
                value="<%= city %>"
            />
            <label for="floatingInput">City</label>
        </div>
        <div class="text-center">
            <button class="btn btn-outline-light btn-lg">Check Weather</button>
        </div>
    </form>
    <% if(perst === "true") { %>
    <section class="container text-center mt-3 border p-3">
        <h4>City: <%= city %></h4>
        <h4>Description: <%= description%></h4>
        <h4>Temperature: <%= temp %> Celsius</h4>
        <p><img src="http://openweathermap.org/img/wn/<%=imageCode%>@2x.png" alt="" /></p>
    </section>
    <% } %> <% if(perst === "error") { %>
    <section class="container text-center mt-3 border p-3">
        <h4>Something went wrong</h4>
    </section>
    <% } %>
</section>
<%-include("partials/foot")%>
